<?xml version="1.0" encoding="utf-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="RibbonLoaded" loadImage="GetImage">

  <!-- add to, don't replace, the whole ribbon -->
  <ribbon startFromScratch="false">
    <tabs>

      <tab idMso="TabAddIns">
        <group id="g1">
          <!-- 
            label was switched to a method in order to insert a non-breaking space, to force layout.
            that's no longer necessary if we're using the smaller button.
          -->
          <button id="b1" getLabel="GetLabel" onAction="ShowConsole" image="console" supertip="Open the BERT console to change settings, write code or run in real time"/>
        </group>
      </tab>

    </tabs>
  </ribbon>
</customUI>
