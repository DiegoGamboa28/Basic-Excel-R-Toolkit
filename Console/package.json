{
  "version": "2.0.1",
  "main": "main.js",
  "name": "bert2-console",
  "build": {
    "win": {
      "target": "dir"
    },
    "files": [
      "ext/**/*",
      "build/*",
      "generated/*",
      "main.js",
      "index.html"
    ],
    "icon": "icon.ico"
  },
  "scripts": {
    "start": "electron .",
    "build": "./node_modules/.bin/less-watch-compiler --run-once && ./node_modules/.bin/tsc",
    "watch": "./node_modules/.bin/less-watch-compiler & ./node_modules/.bin/tsc --watch &",
    "package": "./node_modules/.bin/electron-builder"
  },
  "devDependencies": {
    "@types/node": "^8.5.2",
    "asar": "^0.14.0",
    "electron": "^1.7.10",
    "electron-builder": "^19.49.1",
    "less": "^2.7.3",
    "less-watch-compiler": "^1.10.2",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "electron-reload": "^1.2.2",
    "google-protobuf": "^3.5.0",
    "rxjs": "^5.5.6",
    "xterm": "^2.9.2"
  }
}
